package tddc17;

public class TileMap {

	Point[][] map;
	
	int width;
	int height;
	
	public TileMap(Point size){
		this(size.getX(), size.getY());
	}
	
	public TileMap(int width, int height){
		
		this.width = width;
		this.height = height;
		map = new Point[width][height];
		init(map);
	}
	
	public void setNewSize(int width, int height){
		
		Point[][] newMap = new Point[width][height];
		init(newMap);
		transferTiles(this.map, newMap);
		
		this.map = newMap;
	}
	
	public void print(){
		
		for(int y = 0; y < height; y++){
			for(int x = 0; x < width; x++){
				System.out.print(map[x][y]);	
			}
			System.out.println("");
		}
	}
	
	private static void init(Point[][] map){
		
		for(int y = 0; y < map.length; y++)
			for(int x = 0; x < map[y].length; x++)
				map[x][y] = Point.Zero();
	}
	
	private static void transferTiles(Point[][] origin, Point[][] destination){
		
		for(int y = 0; y < origin.length; y++){
			for(int x = 0; x < origin[y].length; x++){
				destination[x][y] = origin[x][y];
			}
		}
	}
}
